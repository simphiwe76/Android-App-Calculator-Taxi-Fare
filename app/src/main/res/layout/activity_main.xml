<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:scrollbarFadeDuration="500">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txtResult"
            android:inputType="text" android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/btnAdd"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.061"
            app:layout_constraintHorizontal_bias="0.498" android:textColor="#F46B03"/>
    <EditText
            android:layout_width="337dp"
            android:layout_height="68dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/edtNum2"
            app:layout_constraintTop_toBottomOf="@+id/edtNum1"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.021"
            android:hint="Passangers Amount" android:textColorHint="#F46B03"
            android:textColor="#3F51B5" android:fontFamily="sans-serif-smallcaps" android:textStyle="bold"
    />
    <Button
            android:layout_width="341dp"
            android:layout_height="88dp" android:id="@+id/btnAdd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Driver Amount"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#FF9800" android:textColorLink="#FF9800"
            android:backgroundTint="#FF9800" app:strokeColor="#FF9800" android:freezesText="false"
            app:iconGravity="end"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtPassangerAmt"
            app:layout_constraintVertical_bias="0.038" app:layout_constraintHorizontal_bias="0.484"/>
    <EditText
            android:layout_width="337dp"
            android:layout_height="68dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/edtPassangerAmt"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/edtNum2"
            app:layout_constraintVertical_bias="0.026" android:textColor="#3F51B5" android:textColorHint="#F46B03"
            android:hint="Taxi Fare" android:textStyle="bold" android:fontFamily="sans-serif-smallcaps"
    />
    <EditText
            android:layout_width="337dp"
            android:layout_height="68dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/edtNum1"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="Number of Passangers" android:textColorHint="#F46B03"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" app:layout_constraintVertical_bias="0.044"
            android:textColor="#3F51B5"
            android:fontFamily="sans-serif-smallcaps" android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.484"/>
    <ImageView
            android:layout_width="285dp"
            android:layout_height="101dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/imageView4"
            tools:ignore="MissingConstraints" android:background="#FFFFFF"
            android:src="@drawable/baw_sasuka"
            app:srcCompat="@drawable/baw_sasuka"

            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Developed By Hopewell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            android:textColor="#F46B03"
            android:textSize="16sp" app:layout_constraintTop_toBottomOf="@+id/txtResult"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.98"
            tools:ignore="MissingConstraints" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.543"
            android:textAllCaps="true" android:textAlignment="viewEnd" android:fontFamily="sans-serif-light"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txtChange"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtResult" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.048" android:textColor="#F46B03" android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.498"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="46dp"
            android:layout_height="40dp"
            android:id="@+id/progressBar"
            app:layout_constraintBottom_toTopOf="@+id/textView2" app:layout_constraintTop_toBottomOf="@+id/btnAdd"
            app:layout_constraintVertical_bias="0.784" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="invisible" app:layout_constraintHorizontal_bias="0.498"/>
</androidx.constraintlayout.widget.ConstraintLayout>